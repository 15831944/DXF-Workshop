<UserControl x:Class="DXF_Light.PlxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DXF_Light"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
                    
        <TextBlock Text="{lex:Loc Key=PlxFileName}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="5"/>

        <TextBox MaxLength="31"
                 Text="{Binding PlxFileName, Mode=TwoWay}" 
                 Grid.Column="1" 
                 Grid.ColumnSpan="2" 
                 Grid.Row="0" 
                 Margin="5" 
                 VerticalAlignment="Center"/>

        <Button Command="{Binding GetFilesCommand}"
                Grid.Column="0"
                Grid.Row="3"
                VerticalAlignment="Center"
                Content="{lex:Loc Key=SelectFilesButton}"
                Padding="5"
                Margin="5"/>

        <Button Margin="5"
                VerticalAlignment="Center"
                Padding="5"
                Grid.Row="3"
                Grid.Column="3"
                Content="{lex:Loc Key=CreateFileButton}"
                Command="{Binding CreatePlxCommand}"/>
         
        <GroupBox Margin="5"
                  Grid.Row="1" 
                  Grid.Column="0"
                  Grid.ColumnSpan="4"
                  Grid.RowSpan="2"
                  Header="{lex:Loc Key=PlxContents}">

             <DataGrid GridLinesVisibility="Vertical"
                       ItemsSource="{Binding PlxFile.DxfFiles}"
                       AutoGenerateColumns="False"
                       CanUserAddRows="False">
                 <DataGrid.Columns>
                     <DataGridTextColumn Width="*"
                                         Header="{lex:Loc Key=Name}"
                                         Binding="{Binding Name}"/>
                     <mah:DataGridNumericUpDownColumn HideUpDownButtons="True"
                                                      CanUserResize="False"
                                                      Width="70"
                                                      Header="{lex:Loc Key=Qty}"
                                                      Binding="{Binding Qty}"/>
                     <mah:DataGridNumericUpDownColumn HideUpDownButtons="True"
                                                      CanUserResize="False"
                                                      Width="70"
                                                      Header="{lex:Loc Key=Group}"
                                                      Binding="{Binding Group}"/>
                     <mah:DataGridNumericUpDownColumn HideUpDownButtons="True"
                                                      IsReadOnly="True" 
                                                      Width="Auto"
                                                      Header="{lex:Loc Key=Width}" 
                                                      Binding="{Binding Width}"/>
                     <mah:DataGridNumericUpDownColumn HideUpDownButtons="True"
                                                      IsReadOnly="True"
                                                      Width="Auto" 
                                                      Header="{lex:Loc Key=Length}"
                                                      Binding="{Binding Length}"/>
                 </DataGrid.Columns>
             </DataGrid>
         </GroupBox>           
        
        <GroupBox Margin="5" 
                  Header="{lex:Loc Key=Options}" 
                  Grid.Row="0" 
                  Grid.Column="4" 
                  Grid.RowSpan="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <TextBlock TextWrapping="Wrap" 
                           Text="{lex:Loc Key=MaterialWIdth}" 
                           VerticalAlignment="Center" 
                           Grid.Row="1" 
                           Grid.Column="0" 
                           TextAlignment="Left"/>

                <xctk:IntegerUpDown Foreground="{DynamicResource TextBrush}"
                                    ShowButtonSpinner="False"
                                    Minimum="1" Maximum="4000"
                                    CultureInfo="en"
                                    ClipValueToMinMax="True"
                                    AllowSpin="False" Value="{Binding PlxOptions.Width}"
                                    FormatString="N0"
                                    FontSize="12"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="5"/>
                
                <Separator Grid.Row="1" 
                           Grid.Column="0" 
                           Grid.ColumnSpan="2" 
                           VerticalAlignment="Bottom"/>

                <TextBlock TextWrapping="Wrap"
                           Text="{lex:Loc Key=MaterialLength}"
                           VerticalAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="0"
                           TextAlignment="Left"/>

                <xctk:IntegerUpDown Foreground="{DynamicResource TextBrush}"
                                    AllowSpin="False"
                                    ShowButtonSpinner="False"
                                    Maximum="999999"
                                    Minimum="1"
                                    ClipValueToMinMax="True"
                                    Value="{Binding PlxOptions.Length}"
                                    FormatString="N0"
                                    FontSize="12"
                                    CultureInfo="en"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="5"/>

                <Separator Grid.Row="2"
                           Grid.Column="0" 
                           Grid.ColumnSpan="2"
                           VerticalAlignment="Bottom"/>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
